#!/bin/bash
yum update -y
yum install -y httpd24 php56 mysql55-server php56-mysqlnd
service httpd start
chkconfig httpd on
groupadd www
usermod -a -G www ec2-user
chown -R root:www /var/www
chmod 2775 /var/www
curl -o /var/www/index.html https://raw.githubusercontent.com/bopace/cs-462-user-script/master/index.html
find /var/www -type d -exec chmod 2775 {} +
find /var/www -type f -exec chmod 0664 {}
